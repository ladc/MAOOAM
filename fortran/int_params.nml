!------------------------------------------------------------------------------!
! Namelist file :                                                              !
! Integration parameters                                                       !
!------------------------------------------------------------------------------!

!  Scale parameters for the ocean and the atmosphere
&INT_PARAMS
  T_TRANS = 1.D2       !  transient period (e.g. 1.D7)
  T_RUN = 1.D3         !  length of trajectory on the attractor (e.g. 5.D8)
  DT = 5.D-2           !  the time step
  WRITEOUT = T         !  write out all variables every tw time units
  TW = 10.D0           !
&END

&LYAP_PARAMS
  OFFSET = 0              ! offset for starting Lyapunov vector computation
  LENGTH_LYAP = 0         ! length of computation (i.e. turning of Ginelli); "0" full time series
  RESCALING_TIME = 5.D-2  ! Rescaling time for the Lyapunov computation
  SAMPLING_TIME = 1.D0    ! Sampling time for the Lyapunov computation. CLEs will be averaged over this interval
  MAXFILESIZE = 1024      ! Maximum file size in MB
  COMPUTE_BLV = .false.    ! compute BLV
  COMPUTE_BLV_LE = .false. ! compute LEs of BLV
  CONV_BLV = 0.D0         ! wait for convergence BLV
  COMPUTE_FLV = .false.    ! compute FLV
  COMPUTE_FLV_LE = .false. ! compute LEs of FLV
  CONV_FLV = 0.D0         ! wait for convergence FLV
  COMPUTE_CLV = .true.    ! compute CLV
  COMPUTE_CLV_LE = .true. ! compute LEs of CLV
  directionBLV = .true.   ! read/write direction in reverse for BLV    
  directionFLV = .true.   ! read/write direction in reverse for FLV    
  directionCLV = .true.   ! read/write direction in reverse for CLV    
  directionBLE = .false.  ! read/write direction in reverse for BLE    
  directionFLE = .false.  ! read/write direction in reverse for FLE    
  directionCLE = .false.  ! read/write direction in reverse for CLE    
  directionR   = .true.   ! read/write direction in reverse for R matrix    
  directionPROP= .true.   ! read/write direction in reverse for propagator matrix    
&END



! End of parameters Namelist

  



  
